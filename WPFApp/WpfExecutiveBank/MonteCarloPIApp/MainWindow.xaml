<Window x:Class="MonteCarloPIApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonteCarloPIApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="495" Width="450" Initialized="Window_Initialized">
    <DockPanel>
        <Grid x:Name="GrdMain" DockPanel.Dock="Top" Margin="10">
            <Canvas x:Name="CvsPi" Height="400" Width="400">
                <Rectangle Stroke="Black" Width="400" Height="400"></Rectangle>
                <Ellipse Stroke="SlateBlue" Width="400" Height="400"></Ellipse>
             </Canvas>
        </Grid>
        <StatusBar DockPanel.Dock="Bottom"  Margin="20,0,20,10">
            <TextBlock x:Name="LblStatus" Text="Test" ></TextBlock>
        </StatusBar>
    </DockPanel>
</Window>
